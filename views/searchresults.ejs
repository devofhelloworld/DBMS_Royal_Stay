<%- include('partials/nav') %>

    
    

    

    <!-- Search Results Header -->
    <section class="py-8 px-4 ">
        <div class="max-w-7xl mx-auto mt-25">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                <div>
                    <h2 class="text-3xl font-playfair font-bold text-gray-900 mb-2">Available Rooms</h2>
                    <p class="text-gray-600">Showing <span class="font-semibold text-gray-900"><%= roomdata.length%> rooms</span> for <%=guests%> Guests</p>
                </div>
                <div class="mt-4 md:mt-0 flex items-center space-x-4">
                    <label class="text-gray-700 font-medium">Sort by:</label>
                    <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-amber-800">
                        <option>Price: Low to High</option>
                        <option>Price: High to Low</option>
                        <option>Most Popular</option>
                        <option>Highest Rated</option>
                    </select>
                </div>
            </div>

          </section>

    <!-- Search Results Grid -->
    <section class="pb-20 px-4">
        <div class="max-w-7xl mx-auto">


                <!-- Results Grid -->
                <div class="lg:col-span-3 space-y-6">
                    
                  <% roomdata.forEach(data =>{ %>
                  
                                      <!-- Room Card 1 -->
                                      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition">
                                        <div class="md:flex">
                                            <div class="md:w-2/5">
                                                <img src="<%=data.room_img%>" 
                                                     alt="<%=data.room%>" 
                                                     class="w-full h-64 md:h-full object-cover">
                                            </div>
                                            <div class="md:w-3/5 p-6">
                                                <div class="flex justify-between items-start mb-3">
                                                    <div>
                                                        <h3 class="text-2xl font-playfair font-bold text-gray-900 mb-2"><%= data.room_name%></h3>
                                                        <div class="flex items-center text-amber-600 mb-2">
                                                            <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                                                                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                                                            </svg>
                                                            <span class="ml-1 font-semibold">4.9</span>
                                                            <span class="ml-1 text-gray-600 text-sm">(286 reviews)</span>
                                                        </div>
                                                    </div>
                                                    <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">Available</span>
                                                </div>
                
                                                <p class="text-gray-600 mb-4"><%=data.room_des%></p>
                
                                                <div class="grid grid-cols-2 gap-3 mb-4">
                                                    <div class="flex items-center text-gray-700 text-sm">
                                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                                        </svg>
                                                        Max <%=data.capacity%> Guests
                                                    </div>
                                                    <div class="flex items-center text-gray-700 text-sm">
                                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                                                        </svg>
                                                        <%= data.area%> sq ft
                                                    </div>
                                                    <div class="flex items-center text-gray-700 text-sm">
                                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
                                                        </svg>
                                                        King Bed
                                                    </div>
                                                    <div class="flex items-center text-gray-700 text-sm">
                                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                        </svg>
                                                        Butler Service
                                                    </div>
                                                </div>
                
                                                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                                                    <div>
                                                       
                                                        <p class="text-2xl md:text-3xl font-bold text-amber-800"><%=hoteldata.currency%><%= data.price%><span class=" text-sm text-gray-600">/night</span></p>

                                                    </div>
                                                    <div class="flex gap-2">
                                                        <a href="/roominfo/<%=data.room_id%>">
                                                        <button class=" px-4 py-2 border-2 border-amber-800 text-amber-800 rounded-lg hover:bg-amber-50 transition font-medium">
                                                            View Details
                                                        </button></a>
                                                        
                                                        <button class="px-6 py-2 bg-amber-800 text-white rounded-lg hover:bg-amber-900 transition font-medium">
                                                           <a href="/book/<%=data.room_id%>"> Book Now</a>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                
                  
                  <%})%>



                

            </div>
        </div>
    </section>

