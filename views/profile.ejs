<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - <%= hoteldata.name%> </title>
    <link rel="stylesheet" href="/output.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
        }
        
        .font-playfair {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center">
                    <h1 class="text-3xl font-playfair font-bold text-amber-800"><%= hoteldata.name%> </h1>
                </div>
                <div class="flex items-center space-x-6">
                    <a href="/" class="text-gray-700 hover:text-amber-800 transition">Home</a>
                    <a href="/logout">                    <button class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
                        Logout
                    </button></a>

                </div>`
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-amber-800 to-amber-900 rounded-2xl shadow-xl p-8 mb-8 text-white">
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
                <!-- Profile Picture -->
                <div class="relative">
                    <img src="https://ui-avatars.com/api/?name=<%= userdata.fname%>+<%= userdata.lname%>&size=150&background=f59e0b&color=fff&bold=true" 
                         alt="Profile" 
                         class="w-32 h-32 rounded-full border-4 border-white shadow-lg">
                    <button class="absolute bottom-0 right-0 bg-white text-amber-800 p-2 rounded-full shadow-lg hover:bg-gray-100 transition">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </button>
                </div>

                <!-- Profile Info -->
                <div class="flex-1 text-center md:text-left">
                    <h2 class="text-3xl font-playfair font-bold mb-2"><%= userdata.fname%> <%= userdata.lname%></h2>
                    <p class="text-amber-100 mb-4">Member since November 2024</p>
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start">
                        <span class="bg-white/20 px-4 py-2 rounded-full text-sm backdrop-blur">
                            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <%= userdata.email%>
                        </span>
                        <span class="bg-white/20 px-4 py-2 rounded-full text-sm backdrop-blur">
                            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            +91 <%= userdata.phone%>
                        </span>
                        <span class="bg-green-500 px-4 py-2 rounded-full text-sm font-semibold">
                            âœ“ Verified Account
                        </span>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="flex gap-4 text-center">
                    <div class="bg-white/20 backdrop-blur rounded-lg p-4">
                        <div class="text-3xl font-bold"><%= reservationsdata.length%></div>
                        <div class="text-sm text-amber-100">Total Bookings</div>
                    </div>
                    <div class="bg-white/20 backdrop-blur rounded-lg p-4">
                        <div class="text-3xl font-bold">2</div>
                        <div class="text-sm text-amber-100">Active</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- Left Column - Profile Details -->
            <div class="lg:col-span-2 space-y-6">
                
                <!-- Personal Information Card -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-2xl font-playfair font-bold text-gray-900">Personal Information</h3>
                        <button class="text-amber-800 hover:text-amber-900 font-semibold flex items-center">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Edit
                        </button>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">First Name</label>
                            <p class="text-lg font-semibold text-gray-900"><%= userdata.fname%> </p>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">Last Name</label>
                            <p class="text-lg font-semibold text-gray-900"><%= userdata.lname%> </p>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">Email Address</label>
                            <p class="text-lg font-semibold text-gray-900"><%= userdata.email%> </p>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">Phone Number</label>
                            <p class="text-lg font-semibold text-gray-900">+91 <%= userdata.phone%> </p>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">Account Status</label>
                            <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                Active
                            </span>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600 block mb-1">Member Since</label>
                            <p class="text-lg font-semibold text-gray-900">Nov 07, 2024</p>
                        </div>
                    </div>
                </div>

                <!-- Recent Bookings Card -->
                <div class="bg-white rounded-xl shadow-lg p-6" id="bookings">
                    <h3 class="text-2xl font-playfair font-bold text-gray-900 mb-6">Recent Bookings</h3>
                    
                    <div class="space-y-4">
                        <!-- Booking 1 -->

                        <% reservationsdata.forEach(data=>{ %>

                          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition <%= todaysdate>data.checkout ? 'opacity-60':'opacity-100'%>">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <h4 class="font-bold text-gray-900 text-lg"><%= data.room%></h4>
                                    <p class="text-gray-600 text-sm">Booking ID: <%= data.reservation_id%></p>
                                </div>
                                <span class="px-3 py-1 bg-<%= todaysdate>data.checkout?'blue':'green'%>-100 text-<%= todaysdate>data.checkout?'blue':'green'%>-700 rounded-full text-xs font-medium"><%= todaysdate>data.checkout?'Completed':'Confirmed'%></span>
                            </div>
                            <div class="grid grid-cols-2 gap-4 text-sm">
                                <div>
                                    <p class="text-gray-600">Check-in</p>
                                    <p class="font-semibold text-gray-900"><%= data.checkin%></p>
                                </div>
                                <div>
                                    <p class="text-gray-600">Check-out</p>
                                    <p class="font-semibold text-gray-900"><%= data.checkout%></p>
                                </div>
                                <div>
                                    <p class="text-gray-600">Guests</p>
                                    <p class="font-semibold text-gray-900"><%= data.adults%> Adults</p>
                                </div>
                                <div>
                                    <p class="text-gray-600">Total Amount</p>
                                    <p class="font-semibold text-amber-800"><%=hoteldata.currency%><%= data.totalamount%></p>
                                </div>
                            </div>
                            <div class="mt-4 flex gap-2">
                                <button class="flex-1 bg-amber-800 text-white py-2 rounded-lg hover:bg-amber-900 transition text-sm">
                                    View Details
                                </button>
                                <button class="flex-1 border-2 border-gray-300 text-gray-700 py-2 rounded-lg hover:bg-gray-50 transition text-sm">
                                    Cancel Booking
                                </button>
                            </div>
                        </div>





                       <% })  %>

                        


                    </div>


                </div>

            </div>

            <!-- Right Column - Quick Actions & Settings -->
            <div class="space-y-6">
                
                <!-- Quick Actions Card -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-4">Quick Actions</h3>
                    <div class="space-y-3">
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                New Booking
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Booking History
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                                </svg>
                                Saved Rooms
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-amber-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                                </svg>
                                Payment Methods
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Account Settings Card -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-xl font-playfair font-bold text-gray-900 mb-4">Account Settings</h3>
                    <div class="space-y-3">
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit Profile
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                                </svg>
                                Change Password
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                                </svg>
                                Notifications
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                        <button class="w-full flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-5 h-5 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Help & Support
                            </span>
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Loyalty Points Card -->
                <div class="bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl shadow-lg p-6 text-white">
                    <h3 class="text-xl font-playfair font-bold mb-2">Loyalty Points</h3>
                    <div class="text-4xl font-bold mb-2">2,450</div>
                    <p class="text-amber-100 text-sm mb-4">550 points to next reward tier</p>
                    <div class="bg-white/20 rounded-full h-2 mb-4">
                        <div class="bg-white rounded-full h-2" style="width: 75%"></div>
                    </div>
                    <button class="w-full bg-white text-amber-600 py-2 rounded-lg hover:bg-amber-50 transition font-semibold">
                        Redeem Points
                    </button>
                </div>

            </div>

        </div>

    </div>

</body>
</html>